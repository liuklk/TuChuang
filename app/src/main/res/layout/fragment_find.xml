<?xml version="1.0" encoding="utf-8"?>
<com.jwenfeng.library.pulltorefresh.PullToRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/content_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/zxing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/zxing"
                        android:textColor="@color/withe"
                        android:textSize="16sp"/>

                    <RelativeLayout
                        android:id="@+id/search"
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight="5">

                        <ImageView
                            android:id="@+id/search_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/search"/>

                        <View
                            android:id="@+id/search_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/searchbg"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40dp"
                            android:text="搜索"
                            android:textColor="@color/withe"
                            android:textSize="14sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/cart"/>

                        <TextView
                            android:id="@+id/cart_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/cart_number"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/withe"
                            android:textSize="10sp"/>
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>


            <FrameLayout
                android:id="@+id/content_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

            </FrameLayout>

            <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:orientation="horizontal">-->

            <!--<View-->
            <!--android:layout_width="7dp"-->
            <!--android:layout_height="7dp"-->
            <!--android:background="@drawable/dot_select"/>-->

            <!--<View-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_width="7dp"-->
            <!--android:layout_height="7dp"-->
            <!--android:background="@drawable/dot_normal"/>-->
            <!--</LinearLayout>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/smear_focus"
                android:drawablePadding="10dp"
                android:gravity="bottom"
                android:text="潮汇焦点"
                android:textColor="@color/textcolor1"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/pic5"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/pic6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@drawable/hot"
                    android:drawablePadding="10dp"
                    android:gravity="bottom"
                    android:paddingBottom="12dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="热门"
                    android:textColor="@color/textcolor1"
                    android:textSize="15sp"/>
                <!--<View-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:background="@color/stockcolor"-->
                <!--android:layout_width="0.5dp"-->
                <!--android:layout_height="match_parent"/>-->
                <TextView
                    android:id="@+id/newest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/line"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="最新"
                    android:textColor="@color/textcolor3"
                    android:textSize="15sp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/look_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/nav_icon_more"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp"
                    android:text="查看更多"
                    android:textColor="@color/text_bg_3"
                    android:textSize="12sp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.twentyfourhours.tuchuang.widget.MyGridView
                    android:id="@+id/grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="11dp"
                    android:numColumns="2"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:scrollbars="none"
                    android:verticalSpacing="11dp">

                </com.twentyfourhours.tuchuang.widget.MyGridView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ImageView
                        android:id="@+id/progress_bar"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/load_gif"
                        android:visibility="gone"/>
                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</com.jwenfeng.library.pulltorefresh.PullToRefreshLayout>