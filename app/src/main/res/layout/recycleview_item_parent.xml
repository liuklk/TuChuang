<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <TextView
        android:visibility="gone"
        android:id="@+id/first_view"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="帮助中心"
        android:textColor="@color/text_bg_3"
        android:textSize="@dimen/text13"/>
    <LinearLayout
        android:id="@+id/oder"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/withe"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_order_help"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:text="变更订单,取消订单"
                android:textColor="@color/text_bg_3"
                android:textSize="@dimen/text13"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/content"
                android:layout_marginBottom="3dp"
                android:text="关于订单的变更.取消"
                android:textColor="@color/text_bg_1"
                android:textSize="@dimen/text15"/>

            <ImageView
                android:id="@+id/expend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/icon_more_help"/>

            <View
                android:id="@+id/parent_dashed_view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/stockcolor"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/last_view"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg"
        android:visibility="gone"/>
</LinearLayout>