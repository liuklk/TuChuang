<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/shure_btn_bg">

        <LinearLayout
            android:id="@+id/jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="@color/withe"
                android:textSize="28sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="元"
                android:textColor="@color/withe"
                android:textSize="17sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@id/jiage"
            android:text="满160减30元券"
            android:textColor="@color/withe"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/jiage"
            android:text="2018.01.11-2018.01.30"
            android:textColor="@color/withe"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/selected"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="82dp"
            android:background="@drawable/img_selected"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/withe"/>

        <LinearLayout
            android:id="@+id/expend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/withe_bg"
            android:orientation="horizontal"
            android:padding="15dp">

            <View
                android:layout_width="15dp"
                android:layout_height="2dp"/>

            <TextView
                android:id="@+id/detail"
                android:layout_width="260dp"
                android:layout_height="13dp"
                android:text="全场通用;年货节活动;全场通用;全场通用;年货节活动;全场通用;年货节活动;全场通用;年货节活动;全场通用;年货节活动;全场通用;年货节活动;"
                android:textColor="@color/text_bg_1"
                android:textSize="11sp"/>

            <View
                android:layout_width="15dp"
                android:layout_height="2dp"/>

            <ImageView
                android:id="@+id/expend_iv"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/icon_down_coupon"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
</LinearLayout>