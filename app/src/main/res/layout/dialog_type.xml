<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zhy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/withe"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:paddingBottom="21dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="21dp">

        <ImageView
            android:id="@+id/pic_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/img_type"/>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_close_type"/>

        <TextView
            android:id="@+id/shuxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/pic_iv"
            android:text="请选择规格属性"
            android:textColor="@color/text_bg_1"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/shuxing"
            android:layout_alignStart="@id/shuxing"
            android:layout_marginBottom="8dp"
            android:text="价格:"
            android:textColor="@color/text_bg_1"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/jiage"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/jiage"
            android:text="¥39"
            android:textColor="@color/text_bg_1"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/limit_time"
            android:layout_above="@id/jiage"
            android:layout_alignStart="@id/shuxing"
            android:layout_marginBottom="8dp"
            android:background="@color/black_bg"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/withe"
            android:text="限时购"
            android:layout_width="57dp"
            android:layout_height="16dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/withe"
        android:paddingLeft="12dp"
        android:text="颜色"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/text14"/>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/withe"
        android:paddingTop="2dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        zhy:max_select="1">
    </com.zhy.view.flowlayout.TagFlowLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/withe"
        android:paddingLeft="12dp"
        android:text="款式"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/text14"/>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/withe"
        android:paddingTop="2dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        zhy:max_select="1">
    </com.zhy.view.flowlayout.TagFlowLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/withe"
        android:paddingLeft="12dp"
        android:text="尺寸"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/text14"/>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/withe"
        android:paddingTop="2dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        zhy:max_select="1">
    </com.zhy.view.flowlayout.TagFlowLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/withe"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:text="数量"
        android:textColor="@color/black_bg"
        android:textSize="@dimen/text14"/>

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="23dp"
        android:layout_below="@id/delivery_tv"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/shop_iv"
        android:background="@drawable/cart_add_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/text_bg_3"
            android:textSize="15sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/stockcolor"/>

        <TextView
            android:id="@+id/shop_number_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/text_bg_1"
            android:textSize="14sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/stockcolor"/>

        <TextView
            android:id="@+id/minus_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black_bg"
            android:textSize="15sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/stockcolor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/withe"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/customer_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/icon_service"/>

        <RelativeLayout
            android:id="@+id/cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_cart"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginRight="6dp"
                android:id="@+id/cart_number"
                android:layout_alignParentRight="true"
                android:background="@drawable/cart_cycle_number"
                android:textSize="10sp"
                android:textColor="@color/withe"
                android:text="2"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <CheckBox
            android:id="@+id/collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="2"
            android:button="@drawable/collection_selector"
            android:gravity="center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/add_cart"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="4"
            android:background="@drawable/cart_add"
            android:text="加入购物车"
            android:textColor="@color/text_bg_1"
            android:textSize="@dimen/text14"/>

        <Button
            android:id="@+id/buy"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:background="@color/black_bg"
            android:text="立即购买"
            android:textColor="@color/withe"
            android:textSize="@dimen/text14"/>
    </LinearLayout>
</LinearLayout>