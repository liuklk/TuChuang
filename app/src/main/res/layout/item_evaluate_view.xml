<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/withe"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/img_head_detail"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="武****"
            android:textColor="@color/textcolor1"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/star"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/user_name"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/star_selector"/>

            <ImageView
                android:id="@+id/star2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/star_selector"/>

            <ImageView
                android:id="@+id/star3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/star_selector"/>

            <ImageView
                android:id="@+id/star4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/star_selector"/>

            <ImageView
                android:id="@+id/star5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/star_selector"/>
        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginTop="12dp"
            android:text="2018.01.16 00:05"
            android:textColor="@color/textcolor2"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/time"
            android:text="热烈黄"
            android:textColor="@color/textcolor2"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="2dp"
            android:maxLines="5"
            android:text="这家衣服质量超级好,不像几十块钱的地摊货,总体来说非常划算,图片非常清晰好看,图片非常清晰好看,图片非常清晰好看"
            android:textColor="@color/text_bg_1"
            android:textSize="@dimen/text14"/>


    </RelativeLayout>
    <com.twentyfourhours.tuchuang.image.NoScrollGridView
        android:layout_marginTop="12dp"
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="2dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:visibility="gone"
        android:verticalSpacing="2dp" />
    <View
        android:layout_marginTop="13dp"
        android:background="@color/stockcolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>