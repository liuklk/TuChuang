<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="171dp">
        <ImageView
            android:padding="20dp"
            android:background="#dcdcdc"
            android:id="@+id/image"
            android:src="@drawable/face1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="gone"
            android:padding="50dp"
            android:background="#5000"
            android:id="@+id/select_view"
            android:src="@drawable/icon_selected_customized"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/customized_style_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <RelativeLayout
            android:id="@+id/style_click"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:id="@+id/style"
                android:text="款式"
                android:textColor="@color/text_color_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/pull_style"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_more_down_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="@color/stockcolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:id="@+id/size_click"
            android:gravity="center_vertical"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:id="@+id/size"
                android:text="尺码"
                android:textColor="@color/text_color_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/pull_size"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_more_down_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>