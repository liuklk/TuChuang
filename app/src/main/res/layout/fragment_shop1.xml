<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="270dp">
<LinearLayout
    android:paddingRight="6dp"
    android:paddingLeft="6dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:background="@drawable/shop_bg"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/name1"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="14dp"
                android:textSize="14sp"
                android:textColor="@color/textcolor1"
                android:text="T恤"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@id/name1"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="14dp"
                android:textSize="12sp"
                android:textColor="@color/textcolor2"
                android:text="第二层皮肤"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-2dp"
                android:src="@drawable/women1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/pic1"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="14dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/pic4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="14dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/pic1"
                android:src="@drawable/cycle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:background="@drawable/shop_bg"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/name2"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="14dp"
                android:textSize="14sp"
                android:textColor="@color/textcolor1"
                android:text="裤子"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@id/name2"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="14dp"
                android:textSize="12sp"
                android:textColor="@color/textcolor2"
                android:text="舒适出行"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/trousers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/pic2"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="14dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/cycle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="14dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/pic2"
                android:src="@drawable/cycle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:background="@drawable/shop_bg"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/name3"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="14dp"
                android:textSize="14sp"
                android:textColor="@color/textcolor1"
                android:text="卫衣"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@id/name3"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="14dp"
                android:textSize="12sp"
                android:textColor="@color/textcolor2"
                android:text="温暖有型"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="-16dp"
                android:src="@drawable/women2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/pic3"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="14dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/cycle5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="14dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/pic3"
                android:src="@drawable/cycle6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:background="@drawable/shop_bg"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/name4"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="14dp"
                android:textSize="14sp"
                android:textColor="@color/textcolor1"
                android:text="帆布袋"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@id/name4"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="14dp"
                android:textSize="12sp"
                android:textColor="@color/textcolor2"
                android:text="清新生活"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/canvas1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/pic4"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="14dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/pic3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="14dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/pic4"
                android:src="@drawable/cycle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>