<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
<LinearLayout
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical"
    android:background="@drawable/wirte_head_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/business"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_head_community_detail"/>

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/pic"
            android:text="原创博主，美好生活分享"
            android:textColor="@color/text_bg_3"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/detail"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/pic"
            android:text="Mini蜜桃兔"
            android:textColor="@color/text_bg_1"
            android:textSize="@dimen/text14"/>

    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img1"
            android:src="@drawable/img_shot"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/img_shot"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_marginRight="5dp"
            android:src="@drawable/img_shot"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img4"
            android:src="@drawable/img_shot"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/text_bg_2"
            android:text="文章49·被赞5237"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/follow"
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_follow_bg"
            android:drawableLeft="@drawable/icon_follow"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="关注"
            android:textColor="@color/withe"
            android:textSize="@dimen/text12"/>
    </RelativeLayout>
</LinearLayout>
    <View
        android:id="@+id/last_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>