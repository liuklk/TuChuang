<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/withe"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/business"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:layout_marginTop="17dp"
            android:id="@+id/iv_user_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_head_community_detail"/>
        <LinearLayout
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_user_photo"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seedlings"
                android:textColor="@color/text_bg_1"
                android:textSize="@dimen/text14"/>
            <TextView
                android:id="@+id/tv_user_comment"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="想起papi酱的戴森"
                android:textColor="@color/text_bg_1"
                android:textSize="@dimen/text14"/>
            <TextView
                android:id="@+id/tv_user_reply"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5天前   ·   回复"
                android:textColor="@color/text_bg_3"
                android:textSize="@dimen/text12"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/good"
            android:drawablePadding="6dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:drawableLeft="@drawable/icon_like_selector"
            android:text="赞"
            android:textColor="@color/text_bg_3"
            android:textSize="@dimen/text12"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_marginBottom="21dp"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/community_comment_bg"
        android:layout_marginLeft="56dp">
        <com.twentyfourhours.tuchuang.widget.MyListView
            android:id="@+id/lv_user_comment_replys"
            android:divider="@null"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        </com.twentyfourhours.tuchuang.widget.MyListView>
    </FrameLayout>

