<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zhy="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:background="@color/withe"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/withe">

        <ImageView
            android:id="@+id/gold_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:padding="8dp"
            android:src="@drawable/icon_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品评价"
            android:textColor="@color/textcolor1"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/publish"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:textColor="@color/text_bg_1"
            android:text="发表"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:background="@color/stockcolor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_bg_2"
        android:background="@color/withe"
        android:paddingLeft="12dp"
        android:gravity="bottom"
        android:text="请选择您对商品的评价"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:background="@color/withe"
        android:id="@+id/id_flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:paddingBottom="5dp"
        android:paddingRight="7dp"
        zhy:max_select="3">
    </com.zhy.view.flowlayout.TagFlowLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/withe"
        android:paddingLeft="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/text_bg_2"
            android:textSize="@dimen/text_size_14"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:text="请选择评分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/star"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="-5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/star_selector_big"/>

            <ImageView
                android:id="@+id/star2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/star_selector_big"/>

            <ImageView
                android:id="@+id/star3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/star_selector_big"/>

            <ImageView
                android:id="@+id/star4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/star_selector_big"/>

            <ImageView
                android:id="@+id/star5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/star_selector_big"/>
        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:background="@color/stockcolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <EditText
            android:id="@+id/content"
            android:hint="请输入评论内容,字数范围10-200"
            android:gravity="top"
            android:maxLength="200"
            android:textColorHint="@color/text_bg_3"
            android:textColor="@color/text_bg_1"
            android:textSize="15sp"
            android:background="@color/withe"
            android:paddingTop="15dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="136dp"/>
    </LinearLayout>
    <TextView
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:text="上传照片 (最多4张)"
        android:layout_width="match_parent"
        android:layout_height="28dp"/>
    <LinearLayout
        android:id="@+id/load_image"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_add"/>

        <ImageView
            android:id="@+id/load_image1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/load_image2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/load_image3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/load_image4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>