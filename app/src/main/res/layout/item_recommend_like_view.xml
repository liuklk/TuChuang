<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginRight="5dp"
              android:layout_width="172.5dp"
              android:layout_height="280dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="172.5dp"
            android:layout_height="207.5dp">
            <ImageView
                android:src="@drawable/img_like1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/mark_tv"
                android:background="@drawable/text_rc_bg"
                android:gravity="center"
                android:textColor="@color/textcolor_rc"
                android:textSize="10sp"
                android:text="4色可选"
                android:layout_width="15dp"
                android:layout_height="58dp"/>
            <TextView
                android:paddingLeft="5dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/mark_tv2"
                android:background="@color/nuan_bg"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_bg"
                android:textSize="10sp"
                android:text="吸水吸油,热销200万卷"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mark_tv3"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7.5dp"
                android:background="@color/black_bg"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/withe"
                android:text="满件减"
                android:layout_width="48dp"
                android:layout_height="16dp"/>
            <TextView
                android:id="@+id/limit_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7.5dp"
                android:background="@color/black_bg"
                android:textSize="10sp"
                android:gravity="center"
                android:textColor="@color/withe"
                android:text="限时购"
                android:layout_width="48dp"
                android:layout_height="16dp"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7.5dp"
            android:textSize="14sp"
            android:textColor="@color/textcolor1"
            android:text="懒人抹布"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7.5dp"
            android:textSize="13sp"
            android:textColor="@color/clone_bg"
            android:text="¥13.99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:padding="50dp"
        android:background="#5000"
        android:id="@+id/select_view"
        android:src="@drawable/icon_selected_customized"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>