<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/withe"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/withe">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:padding="8dp"
            android:src="@drawable/icon_return"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="作品预览"
            android:textColor="@color/textcolor1"
            android:textSize="16sp"/>

        <TextView
            android:textColor="@color/black_bg"
            android:id="@+id/next_step"
            android:textSize="13sp"
            android:text="下一步"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"/>
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/stockcolor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/withe"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/img_sweater"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="visible"
            android:id="@+id/iv2"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/img_sweater"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:id="@+id/face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="12dp"
            android:src="@drawable/icon_right"/>
        <!--<CheckBox-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:id="@+id/face"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginBottom="12dp"-->
            <!--android:button="@drawable/customized_face_selector"/>-->
        <!--<ImageView-->
            <!--android:layout_marginRight="12dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:id="@+id/next"-->
            <!--android:src="@mipmap/icon_flip"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->

    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="#f8f8f8"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/black_bg"
            android:text="男士卫衣套头FM7213002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/shop_number"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:textColor="@color/black_bg"
            android:text="x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@color/withe"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/black_bg"
            android:text="商品总价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/shop_total_price"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:textColor="@color/black_bg"
            android:text="¥249"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@color/withe"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/black_bg"
            android:text="男士套头卫衣FM7213002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/shop_price"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:textColor="@color/black_bg"
            android:text="¥199"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@color/withe"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/black_bg"
            android:text="正面定制费"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/face_customized_price"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:textColor="@color/black_bg"
            android:text="¥50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>