<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/add_view"
            android:src="@drawable/icon_plus_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@drawable/wirte_head_item_bg"
            android:id="@+id/select_view"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="30dp">
            <ImageView
                android:id="@+id/text"
                android:layout_gravity="center"
                android:src="@drawable/icon_word_publish"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/photo"
                android:layout_gravity="center"
                android:src="@drawable/icon_picture_publish"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/video"
                android:layout_gravity="center"
                android:src="@drawable/icon_video_publish"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/drag_handle"
        android:background="@drawable/wirte_head_item_bg"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@id/click_remove"
            android:padding="6dp"
            android:src="@drawable/icon_del_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/pic_rl"
            android:layout_below="@id/click_remove"
            android:layout_toRightOf="@id/click_remove"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/pic"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_t_publish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <!--android:background="#5000"-->
            <ImageView
                android:visibility="gone"
                android:id="@+id/video_iv"

                android:padding="16dp"
                android:src="@drawable/icon_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/pic_rl"
            android:layout_below="@id/click_remove"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/text14"
                android:textColor="@color/text_bg_1"
                android:id="@+id/add_text"
                android:textColorHint="@color/text_bg_3"
                android:hint="点击添加文字"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <View
               android:id="@+id/add_text_click"
                android:layout_width="160dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/up"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_up_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/down"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_down_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:paddingBottom="10dp"
        android:id="@+id/last_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/add_view2"
            android:src="@drawable/icon_plus_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:visibility="gone"
            android:background="@drawable/wirte_head_item_bg"
            android:id="@+id/select_view2"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="30dp">
            <ImageView
                android:id="@+id/text2"
                android:layout_gravity="center"
                android:src="@drawable/icon_word_publish"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/photo2"
                android:layout_gravity="center"
                android:src="@drawable/icon_picture_publish"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/video2"
                android:layout_gravity="center"
                android:src="@drawable/icon_video_publish"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>