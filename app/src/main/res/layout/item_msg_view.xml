<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:button="@drawable/cart_check_box_selector"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_weight="1"
            android:padding="12dp"
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/time"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/text_bg_3"
                android:textSize="@dimen/text_size_12"
                android:text="2018年01月15日 13:47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_below="@id/time"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/notify_view"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/cart_cycle_number"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <TextView
                    android:textColor="@color/textcolor1"
                    android:text="通知"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/msg"
                android:text="亲爱的好友,恭喜您已注册成功,获得30元新人优惠券,快去定制喜欢的东西吧....."
                android:textColor="@color/text_bg_3"
                android:textSize="@dimen/text_size_12"
                android:layout_alignParentBottom="true"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>