<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<RelativeLayout
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <RelativeLayout
        android:id="@+id/rl_view"
        android:background="@color/withe"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <CheckBox
            android:layout_marginLeft="12dp"
            android:id="@+id/check_box"
            android:layout_centerVertical="true"
            android:button="@drawable/cart_check_box_selector"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/shop_iv"
            android:layout_toRightOf="@id/check_box"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/state_tv"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/shop_iv"
            android:textSize="14sp"
            android:textColor="@color/text_bg_1"
            android:text="定制T恤 无心设计说明说明"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/delivery_tv"
            android:textColor="@color/textcolor2"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/state_tv"
            android:layout_toRightOf="@id/shop_iv"
            android:text="黑色 XL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_marginLeft="12dp"
            android:layout_below="@id/delivery_tv"
            android:layout_toRightOf="@id/shop_iv"
            android:background="@drawable/cart_add_bg"
            android:orientation="horizontal"
            android:layout_width="96dp"
            android:layout_height="23dp">
            <TextView
                android:id="@+id/add_tv"
                android:textColor="@color/text_bg_3"
                android:text="-"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/stockcolor"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/shop_number_tv"
                android:textColor="@color/text_bg_1"
                android:text="1"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <View
                android:background="@color/stockcolor"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/minus_tv"
                android:textColor="@color/black_bg"
                android:text="+"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
            android:id="@+id/new_price"
            android:layout_marginRight="12dp"
            android:textColor="@color/text_bg_1"
            android:textSize="14sp"
            android:layout_alignBaseline="@id/state_tv"
            android:layout_alignParentRight="true"
            android:text="¥99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/delete_price"
            android:layout_marginRight="12dp"
            android:textColor="@color/red_dot"
            android:textSize="10sp"
            android:layout_alignBaseline="@id/delivery_tv"
            android:layout_alignParentRight="true"
            android:text="¥249"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <Button
        android:visibility="invisible"
        android:id="@+id/delete_btn"
        android:textSize="20sp"
        android:textColor="@color/withe"
        android:text="删除"
        android:background="@color/black_bg"
        android:layout_alignParentRight="true"
        android:layout_width="66dp"
        android:layout_height="match_parent"/>
</RelativeLayout>


</LinearLayout>